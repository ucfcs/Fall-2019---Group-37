<?xml version="1.0"?>
<robot name="prototype">
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.1"/>
      </geometry>
    </visual>
  </link>
  
  <!-- RPLidar -->
  <xacro:macro name="sensor_rplidar" params="parent">
    <joint name="laser" type="fixed">
      <origin xyz="0.15 0.0 0.15" rpy="0 0.0 0.0"/>
      <parent link="base_link" />
      <child link="base_laser_link" />
    </joint>
    <link name="base_laser_link">
      <visual>
        <geometry>
	  <box size="0.05 0.05 0.05"/>
	</geometry>
	<material name="Red" />
      </visual>
      <inertial>
        <mass value="0.000001" />
	<origin xyz="0 0 0" />
	<inertia ixx="0.0001" ixy="0.0" ixz="0.0"
	  iyy="0.0001" iyz="0.0"
	  izz="0.0001" />
	</inertial>
      </link>

    <rplidar_laser />
  </xacro:macro>
</robot>
