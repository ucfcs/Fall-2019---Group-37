<launch>

   <master auto="start"/>

  <node pkg="rosserial_arduino" type="serial_node.py" name="serial" output="screen">
    <param name="port" value="/dev/ttyACM0" />
    <param name="baud" value="57600" />
  </node>
  <node pkg="rplidar_ros" type="rplidarNode" name="rplidar" output="screen">
    <param name="inverted" value="true" />
    <param name="serial_port"         type="string" value="/dev/ttyUSB0"/>
    <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
    <param name="frame_id"            type="string" value="laser"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
  </node>
<!--  <node pkg="egoat" type="tf_broadcaster" name="transform" output="screen">
  </node> -->
  <node pkg="tf" type="static_transform_publisher" name="base_to_laser_broadcaster" args="0 0 0 0 0 0 /base_link /laser 100"/>
  <node pkg="tf" type="static_transform_publisher" name="odom_to_base_link" args="0 0 0 0 0 0 /odom /base_link 100" />
<!-- <node pkg="tf" type="static_transform_publisher" name="map_to_odom" args="0 0 0 0 0 0 /map /odom 100" /> -->
<!--  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
  </node> -->
    
  <include file="$(find hector_mapping)/launch/mapping_default.launch" />
 <!-- Run the map server --> 
<!--  <node name="map_server" pkg="map_server" type="map_server" args=""/> -->

   <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find egoat)/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find egoat)/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find egoat)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find egoat)/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find egoat)/base_local_planner_params.yaml" command="load" />
 </node>

</launch>
